{
	"name": "aureus-phi-magento_theme",
	"version": "0.0.2",
	"main": "index.js",
	"repository": "git@gitlab.com:workwithizzi/projects/aureus-phi-magento_theme.git",
	"author": "Izzi",
	"license": "MIT",
	"private": true,
	"scripts": {
		"docker": "source ./dev.sh && dev",
		"compile": "node-sass --source-comments --output-style expanded -o web/css/ styles/styles.scss",
		"lint": "sass-lint -c .sasslint.yml 'styles/**/*.s+(a|c)ss' -v -q",
		"fix": "sass-lint-auto-fix -c .sasslint-fix.yml 'styles/**/*.s+(a|c)ss' -v -q",
		"autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 5%, ie 9' -r web/css/*.css",
		"styles": "yarn run compile && yarn run autoprefixer",
		"watch": "onchange 'styles/**/*.s+(a|c)ss' -- yarn run styles"
	},
	"devDependencies": {
		"autoprefixer": "^9.7.4",
		"node-sass": "^4.13.1",
		"onchange": "^6.1.0",
		"postcss-cli": "^7.1.0",
		"sass-lint": "^1.13.1",
		"sass-lint-auto-fix": "^0.21.0"
	}
}

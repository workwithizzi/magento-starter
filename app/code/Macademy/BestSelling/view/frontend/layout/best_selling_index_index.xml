<?xml version="1.0"?>
<!-- The name 'best_selling_index_index' is based on matching the url nameing conventions and this layout will only be applied to urls that match this route_id/contoller_name/action_name format. So this will only be applied to the '/best-selling' url -->

<!-- To add a template to a page, you have to assign it to a block or container -->
<!-- A block or container is an xml node that references a specific area on a page -->

<!-- Layout attribute '1column' is a default layout from: magento/module-theme/view/frontend/page_layout -->
<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="pageTitle" translate="true" xsi:type="string">Best Selling</argument>
            </action>
            <arguments>
                <argument name="css_class" xsi:type="string">cms-content-important</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <container htmlTag="div" htmlId="description-container">
                <!-- If a class isn't defined on the block, then the defualt 'Magento\Framework\view\element\template' will be used. -->
                <!-- All blocks have to be named -->
                <!-- cacheable="false" attribute disables full-page caching -->
                <block name="bestselling.description" template="Macademy_BestSelling::description.phtml">
                    <arguments>
                        <argument name="description_view_model" xsi:type="object">Macademy\BestSelling\ViewModel\Description</argument>
                    </arguments>
                    <block name="bestselling.extra1" template="Macademy_BestSelling::description-extra.phtml"/>
                    <block name="bestselling.extra2" template="Macademy_BestSelling::description-extra.phtml"/>
                    <block name="bestselling.extra3" template="Macademy_BestSelling::description-extra.phtml"/>
                </block>
            </container>
        </referenceContainer>
        <!-- @ref: Views/Move blocks on a page -->
        <!-- use 'before/after' attribute with the name of the block that you want to place it in relation to. Use a '-' to move it before/after everything else -->
        <move element="wishlist_sidebar" destination="sidebar.additional" before="-"/>

        <!-- To remove a block, find the name of the blog and set 'remove' attribute to true -->
        <referenceContainer name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" template="Macademy_BestSelling::wishlist/sidebar.phtml"/>
    </body>
</page>
